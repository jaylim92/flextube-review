doctype html
html(lang="ko")
    head
        title #{pageTitle} | #{website}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")    
    body
        header
            h1 
                a(href="/") #{website}  
            nav 
                ul
                    li 
                        a(href="/search") Search
                    if !loggedIn
                        li 
                            a(href="/join") Join
                        li
                            a(href="/login") Login
                    else
                        li 
                            a(href="/videos/upload") Upload Video 
                        li 
                            a(href="/users/edit") Edit Profile 
                        li
                            a(href="/user-profile") #{loggedInUser.name}Ïùò profile
                        li 
                            a(href="/users/logout") Logout 
            h1=pageTitle 
        main 
            block content
    include partials/footer.pug