doctype html
html(lang="ko")
    head
        title #{pageTitle} | Flextube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")    
    body
        header
            small Hello #{fakeUser.name}
            nav 
                ul
                    if fakeUser.loggedIn
                        li 
                            a(href="/Login") Log Out
                    else 
                        li  
                            a(href="/login") Login
            h1=pageTitle 
        main 
            block content
    include partials/footer.pug