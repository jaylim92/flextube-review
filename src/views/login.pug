extend base.pug


block content 
    if errorMessage 
        p=errorMessage
    form(method="POST")
        input(placeholder= "Username",name="username", type="text", required)
        input(placeholder= "Password",name="password", type="password", required)
        input(type="submit", value="Login")
        br
        a(href="/users/github/start") Login With Github &rarr;
    hr
    div Don't you have an account?
    input(type="button", value="Go to join", onclick = `location.href='join'`) 